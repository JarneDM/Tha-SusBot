{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "module": "ESNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowJs": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    // "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["./src/*"],
      "@/lib/*": ["src/lib/*"]
    }
  },
  "include": ["src/**/*"]
}
